<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.unscripted.www.fitnessappprototype.MainActivity">

    <ToggleButton
        android:text="@string/togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/toggleBeginner"
        android:textOn="@string/beginner"
        android:textOff="Beginner"
        android:background="@drawable/my_btn_toggle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:text="@string/togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleAdvanced"
        android:textOn="@string/advanced"
        android:textOff="Advanced"
        android:background="@drawable/my_btn_toggle"
        android:layout_alignBaseline="@+id/toggleNovice"
        android:layout_alignBottom="@+id/toggleNovice"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/myAwesomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="CHOOSE LEVEL"
        android:textSize="20sp" />

    <TextView
        android:text="CHOOSE BODY PART"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:id="@+id/textView4"
        android:layout_below="@+id/toggleBeginner"
        android:layout_alignParentStart="true" />

    <ImageButton
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/imageButton3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/myAwesomeTextView"
        android:layout_marginBottom="24dp" />

    <ImageButton
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/imageButton5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView4" />

    <ImageButton
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/imageButton2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton3" />

    <ToggleButton
        android:text="@string/togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleNovice"
        android:textOn="@string/novice"
        android:textOff="Novice"
        android:background="@drawable/my_btn_toggle"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <ImageButton
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/imageButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton5" />

</RelativeLayout>
